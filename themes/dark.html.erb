<html>
  <head>
  <style>
  :root {
    --black: #000;
    --blue: #409cff;
    --gray-object-only: #636366;
    --orange: #ffb340;
    --purple: #da8fff;
  }

  body {
    background: var(--black);
    font-family: Arial, Helvetica, sans-serif;
  }

  table {
    color: var(--purple);
    table-layout: fixed;
    width: 100%;
  }

  table,
  th,
  td {
    border: 1px solid var(--gray-object-only);
    border-collapse: collapse;
  }

  th {
    color: var(--orange);
    letter-spacing: 1px;
  }

  td {
    padding: 10px;
    word-wrap: break-word;
  }

  td:first-child {
    color: var(--blue);
  }
  </style>
  </head>
  <body>
    <%= render 'table_template.html.erb' %>
  </body>
</html>
